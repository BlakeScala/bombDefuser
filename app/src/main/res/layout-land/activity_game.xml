<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brightBlue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:id="@+id/clockTimerView"
        android:textSize="50sp"
        android:textColor="@color/clockText"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:id="@+id/levelOneButton"
        android:layout_below="@+id/clockTimerView"
        android:layout_toLeftOf="@+id/clockTimerView"
        android:layout_toStartOf="@+id/clockTimerView" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/levelContainer"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/levelOneButton"></FrameLayout>

</RelativeLayout>